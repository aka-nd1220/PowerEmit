    <Compile Update="OpCodeX.Stateless.g.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>OpCodeX.Stateless.tt</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Disassemblies\ILDisassembler.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>ILDisassembler.g.cs</LastGenOutput>
    </None>
    <None Update="OpCodeConst.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>OpCodeConst.g.cs</LastGenOutput>
    </None>
    <None Update="OpCodeX.Invariant.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>OpCodeX.Invariant.g.cs</LastGenOutput>
    </None>
    <None Update="OpCodeX.Stateless.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>OpCodeX.Stateless.g.cs</LastGenOutput>
    </None>
  </ItemGroup>

